{
	"name": "polarix-q/cfdi_admin",
	"description": "A cfdi administration system",
	"keywords": ["SAT", "cfdi", "invoice", "laravel", "accountancy", "api"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
		"nategood/httpful": "*",
		"machuga/authority-l4" : "dev-master",
		"nategood/httpful": "*",
		"pda/pheanstalk": "2.1.*"
	},
	"require-dev": {
		"way/generators": "~2.0",
		"fzaninotto/faker": "1.4.*@dev"
	},
	"autoload": {
		"classmap": [
			"app/backend/laravel/commands",
			"app/backend/laravel/controllers",
			"app/backend/laravel/models",
			"app/backend/laravel/database/migrations",
			"app/backend/laravel/database/seeds",
			"app/backend/laravel/tests/TestCase.php",
			"app/backend/laravel/factory"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
